[user]
	email = me@jcarin.com
	name = Jeremy Carin

[core]
	excludesfile = ~/.gitignore
	editor = vim
	pager = delta

[init]
	defaultBranch = main

[alias]
	s = status -sb
	co = checkout
	br = branch
	c = commit -m
	st = status
	lg = log --graph --oneline --all --decorate
	type = cat-file -t
	dump = cat-file -p
	cc = !fish -c claude_commit

[push]
	default = simple

[fetch]
	prune = true

[merge]
	ff = only

[rebase]
	autoStash = true

[pull]
	rebase = true

[submodule]
	recurse = true

[interactive]
	diffFilter = delta --color-only

[delta]
	features = side-by-side line-numbers decorations
	navigate = true
	line-numbers = true
	side-by-side = true
	decorations = true
	plus-style = "syntax #003800"
	minus-style = "syntax #3f0001"
	syntax-theme = Monokai Extended

[diff]
	colorMoved = default

[filter "lfs"]
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
	clean = git-lfs clean -- %f
